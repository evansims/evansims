{{!< default}}

<div class="container">
    {{!-- Hero Section --}}
    <section class="hero-section">
        <h1 class="hero-title">{{@site.title}}</h1>
        {{#if @site.description}}
            <p class="hero-description">{{@site.description}}</p>
        {{/if}}
    </section>

    {{!-- Bento Grid for Recent Posts --}}
    {{#if posts}}
        <section class="bento-grid">
            {{#foreach posts limit="5"}}
                <article class="bento-card bento-item-{{@index}}">
                    <a href="{{url}}" class="bento-card-link">
                        <div class="bento-card-image">
                            {{#if feature_image}}
                                <img src="{{feature_image}}" alt="{{title}}" loading="lazy" />
                            {{else}}
                                <div class="bento-card-placeholder"></div>
                            {{/if}}
                        </div>
                        <div class="bento-card-content">
                            {{#primary_tag}}
                                <span class="bento-card-category">{{name}}</span>
                            {{/primary_tag}}
                            <h2 class="bento-card-title">{{title}}</h2>
                            {{#if excerpt}}
                                <p class="bento-card-excerpt">{{excerpt}}</p>
                            {{/if}}
                        </div>
                    </a>
                </article>
            {{/foreach}}
        </section>
    {{/if}}

    {{!-- Chronological List for All Posts --}}
    {{#if posts}}
        <section class="post-list">
            <h2 class="post-list-title">All Posts</h2>
            <div class="post-list-items">
                {{#foreach posts}}
                    <article class="post-list-item">
                        <a href="{{url}}" class="post-list-link">
                            <div class="post-list-content">
                                <div class="post-list-header">
                                    {{#primary_tag}}
                                        <span class="post-list-category">{{name}}</span>
                                    {{/primary_tag}}
                                    <time class="post-list-date" datetime="{{date format="YYYY-MM-DD"}}">
                                        {{date format="YYYY"}}
                                    </time>
                                </div>
                                <h3 class="post-list-title">{{title}}</h3>
                            </div>
                        </a>
                    </article>
                {{/foreach}}
            </div>
        </section>
    {{/if}}
</div>