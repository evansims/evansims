{{!< default}}

<div class="container">
    {{!-- Tag Header --}}
    <section class="hero-section">
        <h1 class="hero-title">{{tag.name}}</h1>
        {{#if tag.description}}
            <p class="hero-description">{{tag.description}}</p>
        {{/if}}
        <p class="post-count">{{plural pagination.total empty='No posts' singular='% post' plural='% posts'}}</p>
    </section>

    {{!-- Posts Feed --}}
    <div class="post-feed">
        {{#foreach posts}}
            {{> "post-card"}}
        {{/foreach}}
    </div>

    {{!-- Pagination --}}
    {{pagination}}
</div>