{{!< default}}

<div class="container">
    {{!-- Author Header --}}
    <section class="hero-section">
        {{#author}}
            {{#if profile_image}}
                <img class="author-profile-image" src="{{profile_image}}" alt="{{name}}" />
            {{/if}}
            <h1 class="hero-title">{{name}}</h1>
            {{#if bio}}
                <p class="hero-description">{{bio}}</p>
            {{/if}}
            <p class="post-count">{{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}</p>
        {{/author}}
    </section>

    {{!-- Posts Feed --}}
    <div class="post-feed">
        {{#foreach posts}}
            {{> "post-card"}}
        {{/foreach}}
    </div>

    {{!-- Pagination --}}
    {{pagination}}
</div>