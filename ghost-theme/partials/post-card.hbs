<article class="post-card">
    <a href="{{url}}" class="post-card-link">
        {{#if feature_image}}
            <div class="post-card-image">
                <img src="{{feature_image}}" alt="{{title}}" loading="lazy" />
            </div>
        {{/if}}
        
        <div class="post-card-content">
            <div class="post-card-meta">
                {{#unless ../tag}}
                    {{#primary_tag}}
                        <span class="post-card-category">{{name}}</span>
                    {{/primary_tag}}
                {{/unless}}
                <time class="post-card-date" datetime="{{date format="YYYY-MM-DD"}}">
                    {{date format="MMMM D, YYYY"}}
                </time>
            </div>
            
            <h2 class="post-card-title">{{title}}</h2>
            
            {{#if excerpt}}
                <p class="post-card-excerpt">{{excerpt}}</p>
            {{/if}}
            
            {{#unless ../author}}
                <div class="post-card-author">
                    {{#primary_author}}
                        {{#if profile_image}}
                            <img class="author-avatar" src="{{profile_image}}" alt="{{name}}" />
                        {{/if}}
                        <span class="author-name">{{name}}</span>
                    {{/primary_author}}
                </div>
            {{/unless}}
        </div>
    </a>
</article>